{
  "name": "venl",
  "version": "1.0.3",
  "description": "A modern, zero-dependency environment loader for Node.js using .venl files with schema validation, auto-casting, NODE_VENL modes, and a built-in CLI.",
  
  "author": "Marouane Akrich <y.brox95@gmail.com>",
  "license": "MIT",

  "type": "module",
  "main": "index.cjs",
  "types": "index.d.ts",
  "exports": {
    "import": "./src/index.js",
    "require": "./index.cjs"
  },

  "bin": {
    "venl": "bin/venl.js"
  },

  "files": [
    "src/",
    "bin/",
    "index.d.ts",
    "index.cjs",
    "LICENSE",
    "README.md"
  ],

  "keywords": [
    "env",
    "dotenv",
    "venl",
    "environment",
    "config",
    "zero-dependency",
    "nodejs",
    "environment-variables",
    "configuration",
    "cli"
  ],

  "repository": {
    "type": "git",
    "url": "https://github.com/marouaneakrich/venl.git"
  },

  "bugs": {
    "url": "https://github.com/marouaneakrich/venl/issues"
  },

  "homepage": "https://github.com/marouaneakrich/venl#readme"
}
